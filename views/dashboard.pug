  else
    .outer-dashboard-container
      .sidebar.db-sidebar.hide-in-mobile
          .sticky-bar
            button#editor-button.btn.btn-lg.btn-orange(type='submit', rel="nofollow", onclick="window.location.href='/editor'", role='button')
              <i class="fa fa-plus-circle"></i> NEW SKETCH
            form#import-button.Import(title="Coming soon!")
              button.btn.btn-lg.btn-orange(disabled="true", type='submit', role='button')
                <i class="fa fa-file-upload"></i> IMPORT FILE
            form#profile-button.Profile(title="Coming soon!")
              button.btn.btn-lg.btn-orange(disabled="true", type='submit', role='button')
                <i class="fa fa-user-circle"></i> PROFILE
            form#logout-button.Logout
              button.btn.btn-lg.btn-orange(type='submit', role='button')
                <i class="fa fa-sign-out-alt"></i> LOGOUT
      .carousel.item-container
        .db-mobile-bar.show-in-mobile
          form#import-button.Import(title="Coming soon!")
            button.btn.btn-lg.btn-orange(disabled="true", type='submit', role='button')
              <i class="fa fa-file-upload"></i> IMPORT FILE
          form#profile-button.Profile(title="Coming soon!")
            button.btn.btn-lg.btn-orange(disabled="true", type='submit', role='button')
              <i class="fa fa-user-circle"></i> PROFILE
          form#logout-button.Logout
            button.btn.btn-lg.btn-orange(type='submit', role='button')
              <i class="fa fa-sign-out-alt"></i> LOGOUT
        - var r = 0;
        - var n = 0;
        while r < sketchData.sketches.length
          - n++;
          if n === 3
            - n = 0;
          .sketch_item
            img(src='data:image/png;base64,' + images[r], alt=sketchData.sketches[r])
            p.sketch_name #{sketchData.sketches[r]}
            button.btn.btn-lg.btn-orange.disable-in-mobile(type='submit', onclick="window.location.href='/editor?sketch=" + sketchData.sketches[r] + "'", role='button', rel="nofollow")
              <i class="fa fa-play"></i> OPEN
            p.file_size File Size: #{sketchData.sizes[r]} KB
            p.modified_date Last Modified: #{sketchData.modified[r]}
            p.db_sketch_desc #{descriptions[r]}
            a.download(id='dl' + sketchData.sketches[r], rel="nofollow") 
                <i class="fa fa-file-download"></i> DOWNLOAD
            if (user !== 'demouser')
              a.del.delete(id=sketchData.sketches[r], rel="nofollow")
                <i class="fa fa-trash-alt"></i> DELETE
            else 
              a.del(onclick="alert('Error: This is a demo account!');", id=sketchData.sketches[r], rel="nofollow")
                <i class="fa fa-trash-alt"></i> DELETE
            .clear
          -r++;
