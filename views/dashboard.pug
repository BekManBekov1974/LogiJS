  #blur
  if sketchData.sketches.length === 0
    #dashboard_item_back.carousel(style={height: 180 + 'px', 'margin-bottom': '100px'})
      h1(style="padding: 10px; font-size: 24px;") You don't have any sketches.
      div(style="text-align: center;")
        button.btn.btn-lg.btn-orange(type='submit', onclick="window.location.href='/editor'", role='button' style="margin: 5px;")
          <i class="fa fa-plus-square"></i> NEW SKETCH
        button.btn.btn-lg.btn-green(disabled="true", type='submit', onclick="window.location.href='/editor'", role='button' style="margin: 5px;")
          <i class="fa fa-graduation-cap"></i> COMING SOON!
  else
      .carousel.item-container
        .sidebar.grid-item(style={"grid-row": "1 / " + Math.ceil((sketchData.sketches.length + 2) / 2)})
          .sticky-bar
            button#editor-button.btn.btn-lg.btn-orange(type='submit', onclick="window.location.href='/editor'", role='button' style="margin: 0; width: 100%;")
              <i class="fa fa-plus-circle"></i> NEW SKETCH
            form#profile-button.Profile(title="Coming soon!")
              button.btn.btn-lg.btn-orange(disabled="true", type='submit', role='button' style="margin: 10px 0 0 0; width: 100%;")
                <i class="fa fa-user-circle"></i> PROFILE
            form#logout-button.Logout
              button.btn.btn-lg.btn-orange(type='submit', role='button' style="margin: 0; position: absolute; bottom: 20px; width: calc(100% - 40px);")
                <i class="fa fa-sign-out-alt"></i> LOGOUT
        - var r = 0;
        - var n = 1;
        while r < sketchData.sketches.length
          if n === 1
            - n = 0;
          else
            - n = 1;
          .sketch_item.grid-item(style="grid-row: " + Math.ceil((r + 1) / 2) + "; grid-column: " + (n+1) + ";")
            img.normal(src='data:image/png;base64,' + images[r], style={position: 'absolute', left: '20px', top: '20px', height: '200px', width: '200px'}, alt=sketchData.sketches[r])
            p.sketch_name(style={'text-align': 'left', position: 'absolute', left: '240px', top: '20px', 'white-space': 'nowrap', 'padding-right': '10px'}) #{sketchData.sketches[r].toUpperCase().slice(0, 30)}
            button.btn.btn-lg.btn-green(type='submit', onclick="window.location.href='/editor?sketch=" + sketchData.sketches[r] + "'", role='button', style={margin: 0, float: 'right', position: 'absolute', right: '20px', bottom: '20px', width: '100px'})
              <i class="fa fa-play"></i> OPEN
            button.btn.btn-lg.btn-orange.download(type='submit', id='dl' + sketchData.sketches[r], role='button', style={color: 'white','background-color': 'transparent', margin: 0, position: 'absolute', left: '20px', bottom: '20px', float: 'left'}) 
                <i class="fa fa-file-download"></i> DOWNLOAD
            if (user !== 'demouser')
              button.btn.btn-lg.btn-orange.delete(type='submit', id=sketchData.sketches[r], role='button', style={color: 'white', position: 'absolute', left: '180px', bottom: '20px', float: 'left'})
                <i class="fa fa-trash-alt"></i> DELETE
            else 
              button.btn.btn-lg.btn-orange(type='submit', onclick="alert('Error: This is a demo account!');", id=sketchData.sketches[r], role='button', style={color: 'white', position: 'absolute', left: '180px', bottom: '20px', float: 'left'})
                <i class="fa fa-trash-alt"></i> DELETE
            
            p.file_size(style={position: 'absolute', left: '240px', bottom: '90px'}) FILE SIZE: #{sketchData.sizes[r]} KB
            p.modified_date(style={position: 'absolute', left: '240px', bottom: '70px'}) LAST MODIFIED: #{sketchData.modified[r]}
            p.db_sketch_desc(style={'text-align': 'justify', 'font-size': '14px'}) #{descriptions[r].slice(0, 300)}
          -r++;
