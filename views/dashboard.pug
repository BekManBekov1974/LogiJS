  #dashboard_wc_back.carousel
    form.Logout
      button.btn.btn-lg.btn-orange(type='submit', role='button' style="margin: 15px; float:left; position: absolute;")
        <i class="fa fa-sign-out"></i> LOGOUT
    button.btn.btn-lg.btn-orange(type='submit', onclick="window.location.href='/editor'", role='button' style="margin: 15px; float:right; position: absolute; right: 0;")
      <i class="fa fa-plus-square"></i> NEW SKETCH
    h1(style="padding: 15px;") #{user.toUpperCase()}'S DASHBOARD
  if sketchData.sketches.length === 0
    #dashboard_item_back.carousel(style={height: 180 + 'px', 'margin-bottom': '100px'})
      h1(style="padding: 10px; font-size: 24px;") You don't have any sketches.
      div(style="text-align: center;")
        button.btn.btn-lg.btn-orange(type='submit', onclick="window.location.href='/editor'", role='button' style="margin: 5px;")
          <i class="fa fa-plus-square"></i> NEW SKETCH
        button.btn.btn-lg.btn-green(disabled="true", type='submit', onclick="window.location.href='/editor'", role='button' style="margin: 5px;")
          <i class="fa fa-graduation-cap"></i> COMING SOON!
  else
    #dashboard_item_back.carousel(style={height: Math.ceil(sketchData.sketches.length / 2) * 330 - 30 + 'px', 'margin-bottom': '65px', padding: '20px'})
      - var r = 0;
      - var n = 1;
      while r < sketchData.sketches.length
        if n === 1
          - n = 0;
        else
          - n = 1;
        if r < sketchData.sketches.length
          div.db_side_board
            .sketch_item
              img.shadow_layer(src='data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==', style={position: 'absolute', left: '20px', top: '20px', height: '200px', width: '200px'}, alt='')
              img.normal(src='data:image/png;base64,' + images[r], style={position: 'absolute', left: '20px', top: '20px', height: '200px', width: '200px'}, alt=sketchData.sketches[r])
            p.sketch_name(style={'text-align': 'left', position: 'absolute', left: '240px', top: '20px', 'white-space': 'nowrap', 'padding-right': '10px'}) #{sketchData.sketches[r].toUpperCase()}
            button.btn.btn-lg.btn-green(type='submit', onclick="window.location.href='/editor?sketch=" + sketchData.sketches[r] + "'", role='button', style={margin: 0, float: 'right', position: 'absolute', right: '20px', bottom: '20px', width: '100px'})
              <i class="fa fa-play"></i> OPEN
            button.btn.btn-lg.btn-orange.download(type='submit', id='dl' + sketchData.sketches[r], role='button', style={color: 'white','background-color': 'transparent', margin: 0, position: 'absolute', left: '20px', bottom: '20px', float: 'left'}) 
                <i class="fa fa-download"></i> DOWNLOAD
            if (user !== 'demouser')
              button.btn.btn-lg.btn-orange.delete(type='submit', id=sketchData.sketches[r], role='button', style={color: 'white', position: 'absolute', left: '180px', bottom: '20px', float: 'left'})
                <i class="fa fa-trash-o"></i> DELETE
            else 
              button.btn.btn-lg(type='submit', onclick="alert('Error: This is a demo account!');", id=sketchData.sketches[r], role='button', style={color: 'white', position: 'absolute', left: '180px', bottom: '20px', float: 'left'})
                i(class="fa fa-trash-o")
            p.file_size(style={position: 'absolute', left: '240px', bottom: '90px'}) Size: #{sketchData.sizes[r]} KB
            p.modified_date(style={position: 'absolute', left: '240px', bottom: '70px'}) Last modified: #{sketchData.modified[r]}
            if (descriptions[r].length <= 150)
              p.db_sketch_desc(style={'text-align': 'justify', 'font-size': '14px'}) #{descriptions[r].slice(0, 150)}
            else
              p.db_sketch_desc(style={'text-align': 'justify', 'font-size': '14px'}) #{descriptions[r].slice(0, 150) + '...'}
        -r++;
