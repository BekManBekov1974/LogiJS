  .login_container
    form.Login.login-background
      if failed
        p.login-message Anmeldung fehlgeschlagen
          span(style="color: #c83232;") .
      else if signup_success
        p.login-message Registrierung erfolgreich
          span(style="color: #c83232;") .
      else
        h1.login_title Login
          span(style="color: #c83232;") .
      p
        input.username(type='text', placeholder='E-Mail')
        br
        input.password(type='password', placeholder='Passwort')
        br
        input.btn.btn-lg.btn-orange.login-confirm-button(type='submit', value='Login', role='button')
      p.login-redirect-text
